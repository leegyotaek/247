<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <div class="image_wraper"><%=image_tag @pic.name.url if @pic = @user.pictures.first  %> </div>
        <%= @user.name %>
      </h1>
    </section>

    <% if current_user?@user %>
    <%= link_to friends_user_path(@user) , clas: "btn btn-default btn-sm" do %>
  
  <span class="glyphicon glyphicon-user">friends : <%=  @user.friends.count %> ëª…</span>
  
  <% end %>
  <% end %>
  <br>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="col-md-8">

    <%= render 'friend_form' if logged_in? %>



</div>
